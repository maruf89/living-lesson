.responsive-image
    width 100%
    overflow hidden
    vertical-align middle
    position relative
    transition filter 250ms ease-out
    background $white

    span
        display block
        max-width 100%
        max-height 100%
        background-size cover
        
    &.cover
        span
            width 100%
            height 100%
            
        .img
            background-size cover

/*.responsive-image span*/span.img
    display block
    max-width 100%
    width 100%
    background-repeat no-repeat
    background-position center center
    background-size contain

    &:before
        absolute top left
        content ''
        background darken($white, 5%)
        width 100%
        height 100%
        z-index -1