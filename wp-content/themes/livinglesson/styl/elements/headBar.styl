.head-bar
    $font-size = 22
    $height = 50
    $tail-size = $height / 2
    
    width unit((620 / $max-width) * 100, '%')
    margin-left auto
    margin-right auto
    position relative
    text-align center
    font-size em($font-size)
    
    &:after
        content ''
        width 100%
        height 1px
        position absolute
        left 0
        top 49%
        background $chestnut
    
    .text-box
        position relative
        z-index 1
        text-align center
        background $chestnut
        display inline-block
        min-width 75%
        
    .text
        font-size em($font-size, $font-size)
        line-height em($height, $font-size)
        display block
        color $white
        
    .tail:before,
    .tail:after
        content ' '
        position absolute
        width 0
        height 0
        border solid transparent
        pointer-events none
        
    .right:before,
    .left:before
        top 0
        border-width em($tail-size, $font-size)
        margin-left - em($tail-size, $font-size)
        border-bottom-color $chestnut
        
    .right:after,
    .left:after
        top 0
        border-width em($tail-size, $font-size)
        margin-left - em($tail-size, $font-size)
        border-top-color $chestnut
        
    .left:before,
    .left:after
        left 0
        
    .right:before,
    .right:after
        right - em($tail-size, $font-size)
        
    &.bar-desat
        &:after,
        .text-box
            background $brown-desat
            
        .right:before,
        .left:before
            border-bottom-color $brown-desat
            
        .right:after,
        .left:after
            border-top-color $brown-desat
            

        