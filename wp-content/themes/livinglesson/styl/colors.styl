$red = #F42C2C
$maroon = #C20A26
$brown-desat = #60544C
$chestnut = #423327
$brown-light = #9B5E2C
$tan = #F8D990
$orange = #E38A36

/************************/
/***** !SOCIAL MEDIA ****/
/************************/
$fb-blue = #3B5999
$fb-blue-hover = lighten($fb-blue, 20%)
$google-red = #dd4b39
