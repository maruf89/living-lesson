$linkedin-blue = #007bb6
$linkedin-blue-hover = lighten($linkedin-blue, 10%)
$twitter-blue = #33CCFF
$twitter-blue-hover = lighten($twitter-blue, 20%)

$fb-blue-dark = #4D68A1
$google-red-dark = #DD4D3B
$twitter-blue-dark = #5EA9DD
