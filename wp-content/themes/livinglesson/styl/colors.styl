/************************/
/*****  !GRADIENTS   ****/
/************************/
_red-gradient
    background $red
    background linear-gradient(-180deg, $red 0%, $maroon 100%)

_red-gradient-hover
    background darken($red, 30%)
    background linear-gradient(-180deg, darken($red, 30%) 0%, darken($maroon, 25%) 100%)

