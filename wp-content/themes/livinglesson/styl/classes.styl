.cta-color
    color $cta-color !important

.inherit-link
    text-decoration underline
    cursor pointer
    color inherit

.space:before
    content ' '

/**
 * This class cancels out how twitter bootstrap centers columns
 */
[class*='col-'].col-center
    float none
    margin-left auto
    margin-right auto

a.a
    color $red

    .no-touch &:hover
        text-decoration underline

.styled-link
    font 1em $font-italic-val
    cursor pointer
    color $red
    
    .no-touch &:hover
        text-decoration underline
        color $maroon

.right-align
    text-align right

.left-align
    text-align left

.center-align
    text-align center

.hidden

.show,
.block
    display block !important

.show-inline,
.inline
    display inline !important

.show-inline-block,
.inline-block
    display inline-block !important
    
.no-cap
    text-transform none !important

.cap
    text-transform capitalize !important

.clear,
.clearfix
    @extends _clearfix

.relative
    position relative

.top-align
    vertical-align top
    display inline-block

.middle-align
    vertical-align middle
    display inline-block

.bot-align
    vertical-align bottom
    display inline-block

.no-margin
    margin 0 !important

.no-padding
    padding 0 !important

.logged-out
    .logged-in-only
        display none !important

.logged-in
    .logged-out-only
        display none !important

.height-100
    height 100%

.pw-15
    width 15%

.pw-20
    width 20%

.pw-25
    width 25%

.pw-30
    width 30%

.pw-40
    width 40%

.pw-50
    width 50%

.pw-80
    width 80%

.pw-100
    width 100%
    
h1,
.h1
    $font-bold(30)
    
    
    
h3,
.h3
    $font-semi(22)
    

.has-hover
    .hover-visible
        display none

    &:hover,
    &:active
        .hover-visible
            display block

        .default-visible
            display none

